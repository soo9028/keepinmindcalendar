<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parentView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/calendar_border">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cellDayText"
        android:text="1"
        android:fontFamily="@font/zenkakuregular"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.1"/>

    <TextView
        android:id="@+id/tv_eventCell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#80000000"
        app:layout_constraintTop_toBottomOf="@+id/cellDayText"
        app:layout_constraintEnd_toEndOf="@id/cellDayText"
        android:text="hello"
        android:textSize="10sp"
        android:layout_marginLeft="3px"
        android:fontFamily="@font/nexongothicregular"
        android:maxLines="3"
        />


</androidx.constraintlayout.widget.ConstraintLayout>